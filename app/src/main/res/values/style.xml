<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorInputEditTextStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_gravity">end</item>
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:ems">10</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="CalculatorButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/DigitColor</item>
    </style>

    <style name="CalculatorOperationButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>